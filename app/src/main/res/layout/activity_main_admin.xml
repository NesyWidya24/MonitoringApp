<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainAdmin"
    tools:context=".admin.MainActivityAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_backcircle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnExitAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/ic_exit"
                    android:contentDescription="@string/chat"
                    android:text="@string/chat" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImgAdmin"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/usernameAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:maxLines="2"
                    android:text="@string/username"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/departmentAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/student"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxcard"
                android:contentDescription="@string/add_project" />


            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add_project" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/dataProjects"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:text="@string/descItem3"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/add_data"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn2"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="7dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/addData"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxcard"
                android:contentDescription="@string/add_account_staff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_users" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/dataUsers"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:text="@string/descItem2"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/add_account_staff"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn2"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="7dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/add_account"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>